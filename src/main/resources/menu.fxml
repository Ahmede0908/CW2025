<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>
<?import java.net.URL?>

<StackPane xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.comp2042.view.MenuController"
           styleClass="menu-root">

    <VBox alignment="CENTER" spacing="30" styleClass="menu-box">

        <Text text="TETRIS FX"
              styleClass="menu-title"/>

        <Button fx:id="btnStart" text="Start Game"   styleClass="menu-button"/>
        <Button fx:id="btnSettings" text="Settings"  styleClass="menu-button"/>
        <Button fx:id="btnExit" text="Exit"          styleClass="menu-button"/>

    </VBox>

    <stylesheets>
        <URL value="@menu_style.css"/>
    </stylesheets>

</StackPane>
