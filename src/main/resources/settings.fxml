<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import java.net.URL?>

<Pane xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.comp2042.view.SettingsController"
      prefWidth="750" prefHeight="600">
    
    <!-- Centered Settings Container with Teal Frame -->
    <VBox alignment="CENTER" spacing="30" styleClass="menu-frame"
          layoutX="125" layoutY="100"
          prefWidth="500" prefHeight="400">
        <Text text="SETTINGS" styleClass="menu-title"/>
        
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 20px 0px;">
            <Label text="Game Settings" 
                   styleClass="menu-subtitle"
                   style="-fx-padding: 10px 0px;"/>
            
            <!-- Placeholder for future settings -->
            <Label text="Settings options coming soon..." 
                   style="-fx-text-fill: #888888; -fx-font-size: 14px;"/>
        </VBox>
        
        <Button fx:id="btnBack" text="BACK TO MENU" 
                prefWidth="250" prefHeight="50"
                styleClass="retro-button"/>
    </VBox>
    
    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>
</Pane>
