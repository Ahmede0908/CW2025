<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Slider?>
<?import java.net.URL?>

<Pane xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.comp2042.view.SettingsController"
      minWidth="750" minHeight="600">
    
    <!-- Centered Settings Container with Teal Frame -->
    <VBox fx:id="settingsContainer" alignment="CENTER" spacing="25" styleClass="menu-frame"
          prefWidth="550" prefHeight="500">
        <Text text="SETTINGS" styleClass="menu-title"/>
        
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 20px 0px;">
            
            <!-- Ghost Piece Toggle -->
            <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 10px;">
                <Label text="Ghost Piece:" 
                       style="-fx-text-fill: #ffffff; -fx-font-size: 16px; -fx-font-weight: bold; -fx-min-width: 150px;"/>
                <CheckBox fx:id="ghostToggle" 
                          text="Show ghost piece preview"
                          style="-fx-text-fill: #ffffff; -fx-font-size: 14px;"/>
            </HBox>
            
            <!-- Hard Drop Toggle -->
            <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 10px;">
                <Label text="Hard Drop:" 
                       style="-fx-text-fill: #ffffff; -fx-font-size: 16px; -fx-font-weight: bold; -fx-min-width: 150px;"/>
                <CheckBox fx:id="hardDropToggle" 
                          text="Enable hard drop (SPACE)"
                          style="-fx-text-fill: #ffffff; -fx-font-size: 14px;"/>
            </HBox>
            
            <!-- Difficulty Dropdown -->
            <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 10px;">
                <Label text="Difficulty:" 
                       style="-fx-text-fill: #ffffff; -fx-font-size: 16px; -fx-font-weight: bold; -fx-min-width: 150px;"/>
                <ComboBox fx:id="difficultyDropdown" 
                          prefWidth="200"
                          promptText="Select Difficulty"/>
            </HBox>
            
            <!-- Music Volume Slider -->
            <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 10px;">
                <Label text="Music Volume:" 
                       style="-fx-text-fill: #ffffff; -fx-font-size: 16px; -fx-font-weight: bold; -fx-min-width: 150px;"/>
                <VBox spacing="5" style="-fx-pref-width: 200;">
                    <Slider fx:id="volumeSlider" 
                            min="0.0" max="1.0" value="0.7"
                            showTickLabels="true" showTickMarks="true"
                            majorTickUnit="0.25" minorTickCount="0"
                            snapToTicks="false"
                            prefWidth="200"/>
                    <Label fx:id="volumeLabel" 
                           text="70%" 
                           style="-fx-text-fill: #00ffff; -fx-font-size: 14px; -fx-alignment: center;"/>
                </VBox>
            </HBox>
        </VBox>
        
        <!-- Action Buttons -->
        <HBox alignment="CENTER" spacing="15" style="-fx-padding: 20px 0px;">
            <Button fx:id="btnBack" text="BACK TO MENU" 
                    prefWidth="180" prefHeight="50"
                    styleClass="retro-button"
                    onAction="#goBackToMenu"/>
        </HBox>
    </VBox>
    
    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>
</Pane>
